<h1 class="mb-1 restaurant-show-title">新增餐廳</h1>
<div class="container">
    <form action="/restaurants" method="POST">
      <div class="mb-3">
         <label for="name" class="form-label">店名<span class="text-danger">*</span></label> 
         <input type="text"
                class="form-control"
                id="name"
                placeholder="請輸入餐廳名稱"
                name="name"
                required/>
      </div>
      <div class="mb-3">
          <label for="name_en" class="form-label">英文店名<span class="text-danger">*</span></label>
          <input type="text"
                 class="form-control"
                 id="name_en"
                 placeholder="請輸入餐廳名稱英文"
                 name="name_en"
                 required />
      </div>
      <div class="mb-3">
          <label for="category" class="form-label">分類<span class="text-danger">*</span></label>
          <input type="text"
                 class="form-control"
                 id="category"
                 placeholder="請輸入餐廳分類"
                 list="categoryOptions"
                 name="category"
                 required />
          <datalist id="categoryOptions">
              <option>美式</option>
              <option>咖啡</option>
              <option>中東料理</option>
              <option>日本料理</option>
              <option>義式餐廳</option>
          </datalist>
      </div>
      <div class="mb-3">
          <label for="image" class="form-label">圖片連結<span class="text-danger">*</span></label>
          <input type="url"
                 class="form-control"
                 id="image"
                 placeholder="請放入餐廳圖片"
                 name="image"
                 required />
      </div>
      <div class="mb-3">
          <label for="location" class="form-label">地址<span class="text-danger">*</span></label>
          <input type="text"
                 class="form-control"
                 id="location"
                 placeholder="請填寫餐廳地址，例如：台北市中正區迷有這條路650號"
                 name="location"
                 required />
      </div>
      <div class="mb-3">
          <label for="phone" class="form-label">電話<span class="text-danger">*</span></label>
          <input type="text"
                 class="form-control"
                 id="phone"
                 placeholder="請填寫餐廳電話，例如：02-22225566"
                 name="phone"
                 required />
      </div>
      <div class="mb-3">
          <label for="google_map" class="form-label">地圖<span class="text-danger">*</span></label>
          <input type="url"
                 class="form-control"
                 id="google_map"
                 placeholder="請填寫餐廳google map，例如：https://goo.gl/maps/cUJEmFSRKyH2"
                 name="google_map"
                 required />
      </div>
      <div class="mb-3">
          <label for="rating" class="form-label">評分<span class="text-danger">*</span></label>
          <input type="number"
                 class="form-control"
                 id="rating"
                 placeholder="請填寫餐廳評分"
                 min="0"
                 max="5"
                 step="0.1"
                 name="rating"
                 required />
      </div>
      <div class="mb-3">
          <label for="description" class="form-label">餐廳簡介<span class="text-danger">*</span></label>
          <textarea
                 class="form-control"
                 id="description"
                 placeholder="請填寫餐廳簡介"
                 rows="3"
                 name="description"
                 required>
          </textarea>
      </div>
      <div class="text-center">
          <button id="save-button" type="submit" class="btn btn-primary">
            新增餐廳
          </button>
          <a href="/">
            <button type="button" class="btn btn-info">
              返回首頁
            </button>
          </a>
          <button type="reset" class="btn btn-warning">
            重新輸入
            </button>
      </div>
    </form>
</div>