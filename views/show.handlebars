<!-- DataDisplay on show page-->
<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>

<div class="container">
    <div class="row">
        <div class="mx-auto px-5">
            <a class="btn btn-outine-success px-4 mx-3" href="/">回到首頁</a>
            <a href="/restaurants/{{ restaurant._id }}/edit" class="btn btn-outline-secondary mr-1">編輯餐廳資訊</a>
            <form action="/restaurants/{{ restaurant._id }}?_method=DELETE" method="post">
             <button type="submit" class="btn btn-outline-danger">刪除餐廳</button>
            </form>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-12 col-md-10 mx-auto">

            <p class="mb-1">
                <span class="text-secondary">
                    <i class="fas fa-utensils pr-2"></i>
                    類別：
                </span>
                {{restaurant.category}}
            </p>

            <p class="mb-1">
                <span class="text-secondary">
                    <i class="fas fa-map-marker-alt pr-2"></i>
                    地址：
                </span>
                {{restaurant.location}}
                <a href="{{restaurant.google_map}}" class="text-secondary" target="_blank">
                    <i class="fas fa-location-arrow pr-2 fa-s"> 地圖 </i>
                </a>
            </p>

            <p class="mb-1">
                <span class="text-secondary">
                    <i class="fas fa-mobile-alt pr-2"></i>
                    電話：
                </span>
                {{restaurant.phone}}
            </p>

            <p class="mb-5">
                <span class="text-secondary">
                    <i class="fas fa-pen pr-1 fa-s"></i>
                    餐廳介紹：
                </span>
                {{restaurant.description}}
            </p>

            <img class="rounded mx-auto d-block mb-4 w-100"
                src="{{restaurant.image}}" alt="{{restaurant.name}}"
                style="max-width: 800px;">
        </div>
    </div>
</div>
