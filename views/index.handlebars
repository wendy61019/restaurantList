<!-- search bar -->
<div class="container search-bar mt-4">
    <div class="search-bar-outer">
        <div class="search-bar-inner">
            <form action="/search">
                <h4 class="mb-2">尋找餐廳：</h4>
                <div class="input-group">
                    <input type="text" name="keyword" class="form-control" placeholder="今天的你，想來點..."
                        aria-label="Restaurant Name..." value="{{keyword}}" aria-describedby="search-button">
                    <div class="input-group-append">
                        <button class="btn btn-major" type="submit" id="search-button"><i
                                class="fas fa-search"></i></button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- restaurant list -->
<div class="container mt-3">
    <div class="row" id="data-panel">
        <div class="col-12 mx-auto">
          <div class="card-group">
          {{#each restaurants}}
          <!-- restaurants 資料庫的編號屬性為 _id -->
            <div class="col-md-4 col-sm-6 col-12">
                <a href="/restaurants/{{this._id}}" class="text-secondary">
                    <div class="card mb-4">
                        <img class="card-img-top"
                            src="{{this.image}}"
                            alt={{this.name}}>
                        <div class="card-body p-3">
                            <h6 class="card-title mb-1">{{this.name}}</h6>

                            <div class="restaurant-category mb-1">
                                <i class="fas fa-utensils pr-2"></i> {{this.category}}
                            </div>

                            <span class="badge badge-pill badge-danger font-weight-normal">
                                {{this.rating}}
                                <i class="fas fa-star fa-xs"></i>
                            </span>
                        </div>
                        
                        <div class="card-footer d-flex justify-content-end flex-wrap">
                            <a href="/restaurants/{{this._id}}/edit"><button class="btn btn-link">Edit</button></a>
                            <a href="/restaurants/{{this._id}}"><button class="btn btn-link">Details</button></a>
                            <form action="/restaurants/{{this._id}}?_method=DELETE" method="POST">
                                <button type="submit" class="btn btn-danger text-white">Delete</button>
                            </form>
                        </div>
                        
                    </div>
                </a>
            </div>
          {{/each}}
          </div>
        </div>
    </div>
</div>
